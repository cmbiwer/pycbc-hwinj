#! /usr/bin/env python

import argparse
import os
import numpy as np
from glue import segments
from itertools import groupby
from operator import itemgetter
from pycbc.frame import read_frame
from pycbc.workflow.segment import fromsegmentxml
from pycbc_hwinj.io import read_exc_entry

# command line usage
parser = argparse.ArgumentParser(usage="pycbc_cat_frame_excitations [--options]",
                                 description="Merge entries into a single file.")

# command line options
parser.add_argument("--input-files", type=str, nargs="+", required=True,
                    help="Input CSV files to read.")
parser.add_argument("--output-file", type=str, required=True,
                    help="Output file to write.")

# parse command line
opts = parser.parse_args()

# create a list to hold all entries
exc_entries = []

# loop over input files
for path in opts.input_files:

    # read input file
    fp = open(path, "rb")
    lines = fp.readlines()
    fp.close()

    # loop over lines
    for line in lines:

       # add entry to list
       if len(line):
           line = line.rstrip("\n")
           exc_entry = read_exc_entry(line)
           exc_entries.append(exc_entry)

# write output file
fp = open(opts.output_file, "w")
for exc_entry in exc_entries:
    fp.write(exc_entry.write() + "\n")
fp.close()
